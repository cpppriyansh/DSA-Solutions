// Online C++ compiler to run C++ program online
#include <iostream>
using namespace std;

void maxnum(int arr[], int n, int i, int answer){
    if(i>n){
        cout<<answer;
        return;
    }

    if(arr[i]>answer){
        answer = arr[i];
    }
    maxnum(arr,n,i+1,answer);
}

int main() {
    int arr[] = {20,60,20,50,78,8};
    int i;
    int answer = 0;
    int n = 5;
    maxnum(arr, n, i, answer);

    return 0;
}
